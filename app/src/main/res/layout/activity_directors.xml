<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PANALACTIVITY.DirectorsActivity"
      android:background="#6B2DE260">



  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">
  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="409dp"
      android:layout_height="173dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
   android:src="@drawable/university" />


  <TextView

      android:id="@+id/textView2"
      android:layout_width="wrap_content"

      android:layout_height="wrap_content"
      android:layout_marginTop="32dp"
      android:text="Director's Pannel"
      android:textColor="#E928CA"
      android:textSize="27dp"
      android:textStyle="bold|italic"
      android:background="#66F5F5F5"
      app:layout_constraintEnd_toEndOf="@+id/imageView3"
      app:layout_constraintHorizontal_bias="0.502"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/imageView3"></TextView>
  <ImageView
      android:id="@+id/addnotice"
      android:layout_width="125dp"
      android:layout_height="125dp"
      android:layout_marginStart="44dp"
      android:layout_marginTop="64dp"
      android:background="@drawable/databackground"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView2"
      android:src="@drawable/notes" />


  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="125dp"
      android:layout_height="125dp"
      android:layout_marginEnd="44dp"
      android:background="@drawable/databackground"
      app:layout_constraintBottom_toBottomOf="@+id/addnotice"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/addnotice"
      app:layout_constraintVertical_bias="0.0"
      android:src="@drawable/meeting" />

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="125dp"
      android:layout_height="125dp"
      android:layout_marginTop="48dp"
      android:background="@drawable/databackground"
      app:layout_constraintEnd_toEndOf="@+id/addnotice"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="@+id/addnotice"
      app:layout_constraintTop_toBottomOf="@+id/textView3"
      android:src="@drawable/teaching" />

  <ImageView
      android:id="@+id/erp"
      android:layout_width="125dp"
      android:layout_height="125dp"
      android:layout_marginEnd="44dp"
      android:background="@drawable/databackground"
      android:src="@drawable/erpl"
      app:layout_constraintBottom_toBottomOf="@+id/imageView6"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="@+id/imageView6"
      app:layout_constraintVertical_bias="0.0" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:text="Add Notice"
      android:textSize="20dp"
      android:textStyle="bold|italic"
      app:layout_constraintEnd_toEndOf="@+id/addnotice"
      app:layout_constraintHorizontal_bias="0.452"
      app:layout_constraintStart_toStartOf="@+id/addnotice"
      app:layout_constraintTop_toBottomOf="@+id/addnotice" />

  <TextView
      android:id="@+id/textView4"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:text="Inform Teachers"
      android:textSize="20dp"
      android:textStyle="bold|italic"
      app:layout_constraintEnd_toEndOf="@+id/imageView7"
      app:layout_constraintHorizontal_bias="0.575"
      app:layout_constraintStart_toStartOf="@+id/imageView7"
      app:layout_constraintTop_toBottomOf="@+id/imageView7"></TextView>

  <TextView
      android:id="@+id/textView6"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:text="Inform Student"
      android:textSize="20dp"
      android:textStyle="bold|italic"
      app:layout_constraintEnd_toEndOf="@+id/imageView6"
      app:layout_constraintHorizontal_bias="0.441"
      app:layout_constraintStart_toStartOf="@+id/imageView6"
      app:layout_constraintTop_toBottomOf="@+id/imageView6"></TextView>

  <TextView
      android:id="@+id/textView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="24dp"
      android:text="Students Erp"
      android:textSize="20dp"
      android:textStyle="bold|italic"
      app:layout_constraintEnd_toEndOf="@+id/erp"
      app:layout_constraintHorizontal_bias="0.534"
      app:layout_constraintStart_toStartOf="@+id/erp"
      app:layout_constraintTop_toBottomOf="@+id/erp"></TextView>
  </androidx.constraintlayout.widget.ConstraintLayout>
  <com.google.android.material.navigation.NavigationView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:id="@+id/nav"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_gravity="start"
      app:menu="@menu/directormenu"
      app:headerLayout="@layout/headerlayout"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

  </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>



