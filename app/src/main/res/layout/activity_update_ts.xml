<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PanelActivity.SubActivitys.UpdateT_S">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="Add Notice For Students"
        android:textColor="#9528A8"
        android:textSize="30dp"
        android:background="#7A4CAF50"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.ortiz.touchview.TouchImageView
        android:id="@+id/image"
        android:layout_width="355dp"
        android:layout_height="351dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/noticeboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <EditText
        android:id="@+id/msg"
        android:layout_width="335dp"
        android:layout_height="49dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/databackground"
        android:ems="10"
        android:hint="Message"
        android:inputType="text"
        android:paddingLeft="34dp"
        android:textColorHint="@android:color/black"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image" />

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Send"
        app:layout_constraintEnd_toEndOf="@+id/msg"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/msg"
        app:layout_constraintTop_toBottomOf="@+id/msg" />






    }
    }
</androidx.constraintlayout.widget.ConstraintLayout>